<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    tools:context=".activities.ConvActivity">
    <androidx.appcompat.widget.Toolbar
        android:titleTextColor="@color/white"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="25dp"
        android:background="@color/transparent"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/back_ImageButton"
        android:src="@drawable/back_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        />
    <ImageView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pfp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/roundpfp"

        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="20dp"

        android:layout_height="20dp"
        android:id="@+id/activity"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_toRightOf="@+id/pfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:id="@+id/usernameTextView"/>
    <RelativeLayout

        android:layout_marginBottom="15dp"
        android:background="@drawable/background_content_top"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginHorizontal="2dp"
       android:id="@+id/recyclerLayout"
        android:layout_below="@id/toolbar">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/msgsRecyclerView"
       />
    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/input_layout"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/recyclerLayout"
            >

            <EditText
                android:id="@+id/msg_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:elevation="4dp"
                android:hint="Message..."
                android:textColor="@color/white"
                android:textColorHint="@color/secondary"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp"/>


            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:id="@+id/send_ImageButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/send"
                android:rotation="90"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/constraint"
       android:layout_width="wrap_content"
       android:layout_below="@+id/input_layout"
       android:layout_height="wrap_content">
    <TextView
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="You are chatting with"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:backgroundTint="@color/secondary"
        android:background="@drawable/textview_background"
        android:textColor="@color/main"
        android:padding="13dp"
        />
    <View
       android:layout_width="0dp"
       android:layout_height="3dp"
       android:layout_marginTop="24dp"
       android:background="@color/secondary"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/div"
       />
       <View
           android:layout_width="0dp"
           android:layout_height="3dp"
           android:layout_marginTop="23dp"
           android:background="@color/secondary"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/div"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:layout_below="@id/constraint"
      android:id="@+id/reyclerOther"/>


</RelativeLayout>